{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,               // ← ここを追加
    "allowSyntheticDefaultImports": true,  // ← ここを追加
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",                     // ← JSX を扱う設定
    "types": [
      "vite/client",
      "jest",                               // ← jest の型定義を読み込む
      "jsdom",                              // ← jsdom 環境型を読み込む
      "@testing-library/jest-dom"           // ← jest-dom のマッチャー型を読み込む
    ]
  },
  "include": ["src"]
}
